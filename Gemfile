source 'https://rubygems.org'

# Ruby 3.4+ 호환: 기본 번들에서 제거된 gem들
gem 'csv'
gem 'base64'
gem 'bigdecimal'
gem 'rexml'

# Windows에서 Jekyll 타임존 처리에 필요
gem 'tzinfo'
gem 'tzinfo-data'

# Ruby 3.0+ Jekyll serve에 필요 (webrick이 기본 번들에서 제거됨)
gem 'webrick'

gem 'jekyll', '~> 4.3'

group :jekyll_plugins do
  gem 'jekyll-feed'
  gem 'jekyll-paginate'
  gem 'jekyll-seo-tag'
  gem 'jekyll-sitemap'
end
